<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron jumbotron-fluid logo">
                <div class="container">
                    <h1 class="display-4">Welcome to RailsManagement</h1>
                    <p class="lead">Manage your project with us</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="d-flex justify-content-center">
            <div class="card plan">
                <div class="card-body">
                    <h5 class="card-title">Free Plan</h5>
                    <p class="card-text">Cost <%= number_to_currency(@free_plan)%></p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Unlimited file uploads</li>
                        <li class="list-group-item">Responsive</li>
                        <li class="list-group-item">1 Project</li>
                    </ul>
                    <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary' %>
                </div>
            </div>
            <div class="card plan">
                <div class="card-body">
                    <h5 class="card-title">Premium</h5>
                    <p class="card-text">Cost <%= number_to_currency(@premium_plan)%></p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Unlimited file uploads</li>
                        <li class="list-group-item">Responsive</li>
                        <li class="list-group-item text-success">Unlimited projects</li>
                    </ul>
                    <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary' %>
                </div>
            </div>
        </div>
    </div>
</div>